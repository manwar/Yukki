#!/usr/bin/env perl
use strict;
use warnings;

use Path::Class;
use Path::Router::Shell;

use lib ''.file($0)->parent->parent->subdir('lib');
use Yukki;
use Yukki::Router;

my $root = file($0)->parent->parent;

my $yukki = Yukki->new( root => $root );
my $router = Yukki::Router->new( app => $yukki );

# use Data::Dumper;
# print Dumper($router);

Path::Router::Shell->new( router => $router )->shell;
